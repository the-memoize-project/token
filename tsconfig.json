{
  "compilerOptions": {
    "strict": true,
    "noEmit": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@color": ["./packages/color"],
      "@color/*": ["./packages/color/*"],
      "@spacing": ["./packages/spacing"],
      "@spacing/*": ["./packages/spacing/*"],
      "@fontFamily": ["./packages/fontFamily"],
      "@fontFamily/*": ["./packages/fontFamily/*"],
      "@fontSize": ["./packages/fontSize"],
      "@fontSize/*": ["./packages/fontSize/*"],
      "@fontWeight": ["./packages/fontWeight"],
      "@fontWeight/*": ["./packages/fontWeight/*"],
      "@lineHeight": ["./packages/lineHeight"],
      "@lineHeight/*": ["./packages/lineHeight/*"],
      "@borderRadius": ["./packages/borderRadius"],
      "@borderRadius/*": ["./packages/borderRadius/*"],
      "@borderWidth": ["./packages/borderWidth"],
      "@borderWidth/*": ["./packages/borderWidth/*"],
      "@shadow": ["./packages/shadow"],
      "@shadow/*": ["./packages/shadow/*"],
      "@opacity": ["./packages/opacity"],
      "@opacity/*": ["./packages/opacity/*"],
      "@tokens": ["./packages/tokens"],
      "@tokens/*": ["./packages/tokens/*"]
    }
  },
  "include": ["packages/**/*", "types.d.ts"],
  "exclude": ["node_modules", "dist", "coverage"]
}
